{
    "description": "A firefox extension that lets you draw on web pages.",
    "manifest_version": 2,
    "name": "Firefox Draw",
    "version": "0.0.1",
    "homepage_url": "https://github.com/CannibalKush/firefox-draw",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "firefox-draw.bundle.js"
            ],
            "css": [
                "src/styles.css"
            ]
        }
    ],
    "icons": {
        "48": "./icon.png"
    },
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "./icon.png",
        "default_title": "Firefox Draw",
        "default_popup": "src/popup/popup.html"
    }
}